<Alloy>
	<Window id="donatePage" class="container">
		<View id="menu" onClick="showhidemenu">
			<TableView id="slideOutMenu">
				<TableViewRow id="menuProfPic">
					<View>
						<ImageView id="slideMenuPic"></ImageView>
						<Label id="slideMenuName" onClick="openProfile">Tom Ryan</Label>
						<View id="whiteLine" bottom="1"></View>
					</View>
				</TableViewRow>
				<TableViewRow id="menuContainer">
					<View>
						<Label id="accountSettings" onClick="testclick">Account Settings</Label>
						<View id="whiteLine" bottom="1"></View>
					</View>
				</TableViewRow>
				<TableViewRow id="menuContainer">
					<View>
						<Label id="signOut" onClick="signOut">Sign Out</Label>
						<View id="whiteLine" bottom="1"></View>
					</View>
				</TableViewRow>
				<TableViewRow id="menuContainer">
					<View>
						<Label id="Help" onClick="testclick">Help</Label>
						<View id="whiteLine" bottom="1"></View>
					</View>
				</TableViewRow>

			</TableView>
		</View>
		<View id="main">
			<View id="iconBar">
				<View id="topActions">
					<ImageView class="topActionButton" id="logobtn" onClick="testclick"></ImageView>
					<ImageView class="topActionButton" id="searchbtn" onClick="searchDisplay"></ImageView>
					<ImageView class="topActionButton" id="menubtn" onClick="showhidemenu"></ImageView>
					<TextField class="topActionButton" id="searchBar"/>
					<Button class="topActionButton" id="cancel" onClick="cancelSearch" title="Cancel"/>
				</View>
			</View>
			<View id="profilePicContainer">
				<ImageView id="profilePic" onPostlayout="setPicture" ></ImageView>
				<Label id="profileName" onPostlayout="setName" text=""></Label>
			</View>
			<TableView id="profileTable">
				<TableViewRow id="rowContainer">
					<View>
						<ImageView id="charityStJude"></ImageView>
						<Label id="charityName" onClick="testclick">St. Jude's Children's Hospital</Label>
						<View id="charityPageContainerContent">

							<Button id="charityButton" title="Donate" onClick="charityButtonClick"/>
							<Button id="submitDonate" title="Donate" />
							<Button id="cancelDonate" title="Cancel" />
							<TextField id="donateField" />

						</View>
						<View id="grayLine" bottom="0"></View>
					</View>
				</TableViewRow>
				<TableViewRow id="rowContainer">
					<View>
						<ImageView id="charitySalvation"></ImageView>
						<Label id="charityName" onClick="testclick">SalvationArmy</Label>
						<View id="charityPageContainerContent">
							<ImageView id ="charityPageDonateBtn"></ImageView>
							<Label id="charityDonateAmount">9,800,072</Label>
						</View>
						<View id="grayLine" bottom="0"></View>
					</View>
				</TableViewRow>
				<TableViewRow id="rowContainer">
					<View>
						<ImageView id="charityFeeding"></ImageView>
						<Label id="charityName" onClick="testclick">Feeding America</Label>
						<View id="charityPageContainerContent">
							<ImageView id ="charityPageDonateBtn"></ImageView>
							<Label id="charityDonateAmount">678,400</Label>
						</View>
						<View id="grayLine" bottom="0"></View>
					</View>
				</TableViewRow>
				<TableViewRow id="rowContainer">
					<View>
						<ImageView id="charityUnited"></ImageView>
						<Label id="charityName" onClick="testclick">United Way</Label>
						<View id="charityPageContainerContent">
							<ImageView id ="charityPageDonateBtn"></ImageView>
							<Label id="charityDonateAmount">97,000</Label>
						</View>
						<View id="grayLine" bottom="0"></View>
					</View>
				</TableViewRow>
				<TableViewRow id="rowContainer">
					<View>
						<ImageView id="charityGive"></ImageView>
						<Label id="charityName" onClick="testclick">GiveDirectly</Label>
						<View id="charityPageContainerContent">
							<ImageView id ="charityPageDonateBtn"></ImageView>
							<Label id="charityDonateAmount">315,080</Label>
						</View>
						<View id="grayLine" bottom="0"></View>
					</View>
				</TableViewRow>
				<!--</ScrollView>-->
			</TableView>
			<View id="menuBar">

				<View class="tbButton">
					<View class="greenLine" id="homeGreenLine"></View>
					<ImageView id="homeBtn" onClick="openHome"></ImageView>
				</View>
				<View  class="tbButton">
					<View class="greenLine" id="exploreGreenLine"></View>
					<ImageView id="exploreBtn" onClick="openExplore" ></ImageView>
				</View>
				<View  class="tbButton">
					<View class="greenLine" id="notificationGreenLine"></View>
					<ImageView id="notificationBtn" onClick="openNotifications"></ImageView>
				</View>
				<View  class="tbButton">
					<View class="greenLine" id="roasterGreenLine"></View>
					<ImageView id="myRosterBtn" onClick="openMyRoster"></ImageView>
				</View>
			</View>
			<View id="grayLine"></View>
		</View>
	</Window>
</Alloy>