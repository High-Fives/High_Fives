<Alloy>
	<Window class="container">
		<View id="menu" onClick="showhidemenu"></View>
		<View id="main">
			<View id="iconBar">
				<View id="topActions">
					<ImageView class="topActionButton" id="logobtn" onClick="testclick"></ImageView>
					<ImageView class="topActionButton" id="searchbtn" onClick="testclick"></ImageView>
					<ImageView class="topActionButton" id="menubtn" onClick="showhidemenu"></ImageView>
				</View>	
			</View>
			
		<TableView id="newsFeed">
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="mikePic"></ImageView>
					<Label id="profileName" onClick="openProfile">Mike Stahr</Label>
					<Label id="timeAgo">10m</Label>
					<Label id="status">Mike Stahr just updated his status.</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="irinaPic"></ImageView>
					<Label id="profileName" onClick="openProfile">Irina Rakhlenko</Label>
					<Label id="timeAgo">25m</Label>
					<Label id="status">Irina Rakhlenko has added a new charity to her profile!</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="natePic"></ImageView>
					<Label id="profileName" onClick="openProfile">Nate Jones</Label>
					<Label id="timeAgo">1h</Label>
					<Label id="status">Nate Jones has begun a join effort with Chris Schipper to raise money for his charity! Click for more details</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="markPic"></ImageView>
					<Label id="profileName" onClick="openProfile">Mark Sullivan</Label>
					<Label id="timeAgo">5h</Label>
					<Label id="status">Mark Sullivan has replied to your comment!</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="chrisPic"></ImageView>
					<Label id="profileName" onClick="openProfile">Chris Schipper</Label>
					<Label id="timeAgo">10h</Label>
					<Label id="status">Chris Schipper added a new charity to his profile!</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="thomasPic"></ImageView>
					<Label id="profileName" onClick="openProfile">Thomas Kojs</Label>
					<Label id="timeAgo">12h</Label>
					<Label id="status">Thomas Kojs has just joined High Fives! Take a minute and check out his profile!</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
		</TableView>
		
			<View id="menuBar">
				<View class="tbButton">
					<ImageView id="homeBtn" onClick="openHome"></ImageView>
				</View>
				<View  class="tbButton">
					<ImageView id="exploreBtn" onClick="testclick"></ImageView>
				</View>
				<View  class="tbButton">
					<ImageView id="notificationBtn" onClick="openNotifications"></ImageView>
				</View>
				<View  class="tbButton">
					<ImageView id="myRosterBtn" onClick="openMyRoster"></ImageView>
				</View>
			</View>
			<View id="grayLine"></View>
		</View>
	</Window>
</Alloy>