<Alloy>
	<Window class="container">
		<View id="menu" onClick="showhidemenu"></View>
		<View id="main">
			<View id="iconBar">
				<View id="topActions">
					<ImageView class="topActionButton" id="logobtn" onClick="testclick"></ImageView>
					<ImageView class="topActionButton" id="searchbtn" onClick="testclick"></ImageView>
					<ImageView class="topActionButton" id="menubtn" onClick="showhidemenu"></ImageView>
				</View>	
			</View>
			
		<TableView id="newsFeed">
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="profilePic"></ImageView>
					<Label id="profileName" onClick="openProfile">Tom Ryan</Label>
					<Label id="timeAgo">10 minutes ago</Label>
					<Label id="status">Tom Ryan just updated his status.</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="profilePic"></ImageView>
					<Label id="profileName" onClick="openProfile">Shannon Web</Label>
					<Label id="timeAgo">25 minutes ago</Label>
					<Label id="status">Shannon Web has added a new charity to her profile!</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="profilePic"></ImageView>
					<Label id="profileName" onClick="openProfile">Ryan Castro</Label>
					<Label id="timeAgo">1 hour ago</Label>
					<Label id="status">Ryan Castro has begun a join effort with Tom Ryan to raise money for his charity! Click for more details</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="profilePic"></ImageView>
					<Label id="profileName" onClick="openProfile">Lydia Shaw</Label>
					<Label id="timeAgo">5 hours ago</Label>
					<Label id="status">Lydia Shaw has replied to your comment!</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="profilePic"></ImageView>
					<Label id="profileName" onClick="openProfile">Tom Ryan</Label>
					<Label id="timeAgo">10 hours ago</Label>
					<Label id="status">Tom Ryan added a new charity to his profile!</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="profilePic"></ImageView>
					<Label id="profileName" onClick="openProfile">Mark Sullivan</Label>
					<Label id="timeAgo">12 hours ago</Label>
					<Label id="status">Mark Sullivan has just joined High Fives! Take a minute and check out his profile!</Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
		</TableView>
		
			<View id="menuBar">
				<View class="tbButton">
					<ImageView id="homeBtn" onClick="openHome"></ImageView>
				</View>
				<View  class="tbButton">
					<ImageView id="exploreBtn" onClick="testclick"></ImageView>
				</View>
				<View  class="tbButton">
					<ImageView id="notificationBtn" onClick="openNotifications"></ImageView>
				</View>
				<View  class="tbButton">
					<ImageView id="myRosterBtn" onClick="openMyRoster"></ImageView>
				</View>
			</View>
			<View id="grayLine"></View>
		</View>
	</Window>
</Alloy>