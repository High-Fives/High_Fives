<Alloy>
	<Window class="container">
		<View id="menu" onClick="showhidemenu">
			<TableView id="slideOutMenu">
			<TableViewRow id="menuProfPic">
				<View>
					<ImageView id="slideMenuPic"></ImageView>
					<Label id="slideMenuName" onClick="openProfile">Tom Ryan</Label>	
					<View id="whiteLine" bottom="0"></View>				
				</View>				
			</TableViewRow>
			<TableViewRow id="menuContainer">
				<View>
					<Label id="accountSettings" onClick="testclick">Account Settings</Label>
					<View id="whiteLine" bottom="0"></View>
				</View>				
			</TableViewRow>	
			<TableViewRow id="menuContainer">
				<View>
					<Label id="signOut" onClick="signOut">Sign Out</Label>
					<View id="whiteLine" bottom="0"></View>
				</View>				
			</TableViewRow>	
			<TableViewRow id="menuContainer">
				<View>
					<Label id="Help" onClick="testclick">Help</Label>
					<View id="whiteLine" bottom="0"></View>
				</View>				
			</TableViewRow>	

							
		</TableView>
			
		</View>
		<View id="main">
			<View id="iconBar">
				<View id="topActions">
					<ImageView class="topActionButton" id="logobtn" onClick="testclick"></ImageView>
					<ImageView class="topActionButton" id="searchbtn" onClick="searchDisplay"></ImageView>
					<ImageView class="topActionButton" id="menubtn" onClick="showhidemenu"></ImageView>
					<TextField class="topActionButton" id="searchBar"/>
					<Button class="topActionButton" id="cancel" onClick="cancelSearch" title="Cancel"/>
				</View>
			</View>
			
		<TableView id="roster">
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="chrisPic"></ImageView>
					<Label class="profileName" id = "ChrisSchipper" onClick="openProfile" text="Chris Schipper"></Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="irinaPic"></ImageView>
					<Label class="profileName" id = "IrinaRakhlenko" onClick="openProfile" text="Irina Rakhlenko"></Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="markPic"></ImageView>
					<Label class="profileName" id = "MarkSullivan" onClick="openProfile" text="Mark Sullivan"></Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="mikePic"></ImageView>
					<Label class="profileName" id = "MikeStahr" onClick="openProfile" text="Mike Stahr"></Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="natePic"></ImageView>
					<Label class="profileName" id = "NateJones" onClick="openProfile" text="Nate Jones"></Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
			
			<TableViewRow id="rowContainer">
				<View>
					<ImageView id="thomasPic"></ImageView>
					<Label class="profileName" id = "ThomasKojs" onClick="openProfile" text="Thomas Kojs"></Label>
					<View id="grayLine" bottom="0"></View>
				</View>
			</TableViewRow>
		</TableView>
			
			<View id="menuBar">
				
				<View class="tbButton">
					<View class="greenLine" id="homeGreenLine"></View>
					<ImageView id="homeBtn" onClick="openHome"></ImageView>
				</View>
				
				<View  class="tbButton">
					<View class="greenLine" id="exploreGreenLine"></View>
					<ImageView id="exploreBtn" onClick="openExplore" ></ImageView>
				</View>
				
				<View  class="tbButton">
					<View class="greenLine" id="notificationGreenLine"></View>
					<ImageView id="notificationBtn" onClick="openNotifications"></ImageView>
				</View>
				
				<View  class="tbButton">
					<View class="greenLine" id="roasterGreenLine"></View>
					<ImageView id="myRosterBtn" onClick="openMyRoster"></ImageView>
				</View>
			</View>
			<View id="grayLine"></View>
		</View>
	</Window>
</Alloy>